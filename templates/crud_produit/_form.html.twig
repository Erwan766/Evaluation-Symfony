{# formulaire stylisé depuis ce fichier car utilisé dans plusieurs fichiers #}

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      {{ form_start(form, {'attr': {'class': 'form'}}) }}
        <div class="form-group">
          {{ form_label(form.nom) }}
          {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.description) }}
          {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.image) }}
          <div class="custom-file">
            {{ form_widget(form.image, {'attr': {'class': 'custom-file-input', 'id': 'image'}}) }}
            <label class="custom-file-label" for="image">Choisir une image</label>
          </div>
        </div>
        <div class="form-group">
          {{ form_label(form.stock) }}
          {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': 'Stock'}}) }}
        </div><br>
        <button type="submit" class="btn btn-success">{{ button_label|default('Ajouter') }}</button>
        <hr>
      {{ form_end(form) }}
    </div>
  </div>
</div>
